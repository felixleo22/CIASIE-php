{% extends "base.html.twig" %}
{% block content %}
<form action='{{ path_for('execModifMdpAdmin') }}' method='POST' enctype="multipart/form-data">
    <div class="form-group">
        <label for="mdp">Ancien mot de passe</label>
        <input id='mdp' class="form-control" name='mdp' type='password' required autofocus>
    </div>

    <div class="form-group">
        <label for="mdp_new">Nouveau mot de passe</label>
        <input id='mdp_new' class="form-control" name='mdp_new' type='password' required>
    </div>
    <div class="form-group">
        <label>Confirmation du nouveau mot de passe</label>
        <input id='mdp_conf' class="form-control" name='mdp_conf' type='password' data-target='mdp_new' required>
    </div>
    <div class="form-group">
        <input class="btn btn-primary" type='submit' value='Valider'>
    </div>
</form>
{% endblock %}
