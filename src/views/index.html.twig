{% extends "base.html.twig" %}

{% block title %}
Smash 2.0 {% if est_connecte() %} - {{ get_admin_login() }}{% endif %}
{% endblock %}

{% block content %}
        <form id="formulaire" action="{{path_for('creerCombat')}}" method="post">
            <section id="personnage">
                <h3 class="global-title">Choix du personnage</h3>
                <div class="card-row" id="deck-personnage">
                    {% for entite in personnages %}
                        {% include 'cardSelectable.html.twig' %}
                        <input id="{{ entite.id }}" class="check" type="checkbox" name="ids[]" value="{{ entite.id }}" hidden>
                    {% endfor %}
                </div>
            </section>
            <section id="monstre">
                <h3 class="global-title">Choix du monstre</h3>
                <div class="card-row" id="deck-monstre">
                    {% for entite in monstres %}
                        {% include 'cardSelectable.html.twig' %}
                        <input id="{{ entite.id }}" class="check" type="checkbox" name="ids[]" value="{{ entite.id }}" hidden>
                    {% endfor %}
                </div>
            </section>
            <div class="form-group" style="display:flex; justify-content: center">
                <input id="valid" class="btn btn-danger" type="submit" value="SMASH">
            </div>
        </form>
{% endblock %}
