{% extends 'base.html.twig' %}
{% block title %}
    Admins
{% endblock %}
{% block content %}
    <table class="table table-bordered">
        <thead>
        <tr>
            <th scope="col">Login</th>
            <th scope="col" colspan="2">Actions</th>
        </tr>
        </thead>
    {% for admin in admins %}
        <tbody>
        <tr>
            <td>{{ admin.login }}</td>
        </tr>
        </tbody>
    {% endfor %}
    </table>
    <p class="link"><a class="btn btn-primary" href="{{ path_for('formCreerAdmin') }}">Ajouter un admin</a></p>
{% endblock %}

