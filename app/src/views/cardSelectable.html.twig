<div id="card-{{ entite.id }}" class="card selectable">
    <div class="card-img-top img-container-300">
        <img src="{{ get_photo(entite.photo, entite.defaultPhoto()) }}" alt="{{ entite.nom }} {{ entite.prenom }}">
    </div>
    <div class="card-body">
        <h5 class="card-title" style="display: flex;justify-content: center">
            <span>{{ entite.nom }} {{ entite.prenom }}</span>
        </h5>
        {% include 'statGroup.html.twig' %}
        <div class="card-text">
            <input type="button" class="btn btn-primary btn-select" id="{{ entite.id }}" value="Choisir" data-type="{{ entite.type }}">
        </div>
    </div>
</div>
