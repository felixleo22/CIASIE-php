{% extends "base.html.twig" %}

{% block title %} Login {% endblock %}

{% block content %}
    <h2>Connexion</h2>
    <form method="POST" action="{{path_for('execConnexion')}}">
        <div class="form-group">
            <label for="iptLogin">Login</label>
            <input class="form-control form-control-sm" id="iptLogin" type="text" name="login">
        </div>
        <div class="form-group">
            <label for="iptPassword">Password</label>
            <input class="form-control form-control-sm" id="iptPassword" type="password" name="password">
        </div>
        <div class="form-group" style="display: flex; justify-content: center">
            <input class="btn btn-primary" type="submit" value="Connexion">
        </div>
    </form>
{% endblock %}
